
<turbo-frame id="posts">

<div class="post-container">
  <h1 class="post-title"><%= @post.title %></h1>
  <div class="post-author-info">
        <span>by</span>
        <a href="<%= user_path(@post.author) %>" class="author-link"><%= @post.author.username %></a> 
        <img src="<%= @post.author.pfp_url %>" alt="<%= @post.author.username %> profile picture" class="mini-profile-picture">
        <span class="follow-button-wrapper"><%= display_follow_button(@post.author) %></span>
  </div>

  <%= image_tag @post.file, class: "post-full-img" if @post.file.attached? %>
  <p class="post-body"><%= @post.body %></p>
  <div class="post-actions">
    <%= button_to "Like #{@post.likes.count}", like_user_path(post_id: @post.id), method: :post, remote: true, class: "like-button" %>
  </div>
  
  <div class="comments-section">
    <h3>Comments</h3>
    <%= post_comment_field(@post) %>
    <%= display_all_comments(@post) %>
  </div>
</div>

</turbo-frame>