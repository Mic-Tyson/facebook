<div class="post-card">
  <a href="<%= post_path(post) %>"><h2><%= post.title %></h2></a>
  <div class="post-author-info">
    <p>
      by <a href="<%= user_path(post.author) %>"><%= post.author.username %></a> 
      <%= display_follow_button(post.author) %>
      <%= "following" if current_user.following? post.author%>
    </p> 
  </div>
  <p><%= post.body.truncate(100) %></p>
  <div class="post-actions">
    <%= button_to "Like #{post.likes.count}", like_user_path(current_user, post_id: post.id), method: :post, remote: true, class: "like-button" %>
  </div>
  <div class="post-comments">
    <%= display_card_comments(post.comments) %>
  </div>
</div>